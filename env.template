# MIRAGE v2 Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION (REQUIRED)
# =============================================================================
GEMINI_API_KEY=your_actual_gemini_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=MIRAGE
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_MAX_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.7

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=./data/embeddings
VECTOR_DB_COLLECTION_NAME=mirage_documents

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_secret_key_here
ENABLE_API_KEY_AUTH=true
API_KEY_EXPIRATION_DAYS=90
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000
MAX_REQUESTS_PER_DAY=10000

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
GENERATOR_AGENT_NAME=The Innovator
VERIFIER_AGENT_NAME=The Analyst
REFORMER_AGENT_NAME=The Editor
TRANSLATOR_AGENT_NAME=The Linguist

# Agent voting thresholds
VERIFIER_YES_THRESHOLD=0.8
VERIFIER_NO_THRESHOLD=0.3
MAX_ITERATIONS=3

# =============================================================================
# ORCHESTRATOR CONFIGURATION
# =============================================================================
ENABLE_HUMAN_IN_LOOP=true
CACHE_TTL_SECONDS=3600
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2
REQUEST_TIMEOUT_SECONDS=30

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_MONITORING=true
MONITORING_LOG_FILE=./logs/mirage.log
MONITORING_LOG_LEVEL=INFO
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_CACHE_TRACKING=true
ENABLE_ERROR_TRACKING=true

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8082"]

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["pdf", "txt", "docx", "md"]
UPLOAD_DIRECTORY=./data/raw_documents

# =============================================================================
# INTERNATIONALIZATION (FUTURE SCALABILITY)
# =============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=["en", "fr", "es", "de"]
ENABLE_TRANSLATION=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
